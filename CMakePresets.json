{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vs-2019",
      "binaryDir": "${sourceDir}/../builds/mtx/${presetName}",
      "generator": "Visual Studio 16 2019"
    }
  ],
  "buildPresets": [
    {
      "name": "build-default",
      "hidden": true,
      "jobs": 16
    },
    {
      "name": "vs-2019-debug",
      "inherits": ["build-default"],
      "configurePreset": "vs-2019",
      "configuration": "Debug"
    },
    {
      "name": "vs-2019-release",
      "inherits": ["build-default"],
      "configurePreset": "vs-2019",
      "configuration": "Release"
    },
    {
      "name": "vs-2019-rel-with-deb",
      "inherits": ["build-default"],
      "configurePreset": "vs-2019",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "vs-2019-min-size-rel",
      "inherits": ["build-default"],
      "configurePreset": "vs-2019",
      "configuration": "MinSizeRel"
    }
  ]
}